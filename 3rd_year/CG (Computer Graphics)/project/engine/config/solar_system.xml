        </transform>
        <models>
            <model file='sphere.3d' red='234' green='214' blue='184'/>
            <model file='torus.3d' red='191' green='189' blue='175'/>
        </models>
    </group>

    <!-- uranus -->
    <group>
        <transform>
            <translate x='179' y='0' z='179' />
            <scale x='3.38' y='3.38' z='3.38' />
        </transform>
        <models>
            <model file='sphere.3d' green='211' blue='217' red='198'/>
        </models>
    </group>
 
    <!-- neptun -->
    <group>
        <transform>
            <translate x='288' y='0' z='288' />
            <scale x='3.28' y='3.28' z='3.28' />
