<world>
    <window width="512" height="512" />
    <camera> 
	    <position x="100" y="100" z="20" />
	    <lookAt x="0" y="0" z="0" />
	    <up x="0" y="1" z="0" /> <!-- optional, use these values as default-->
        <projection fov="60" near="1" far="1000" /> <!-- optional, use these values as default-->
    </camera>

    <!-- sun -->
    <group>
        <transform>
            <translate x = '-155' y='0' z='-155'/>
            <scale x='98.5' y='98.5' z='98.5'/>
        </transform>
        <models>
            <model file='sphere.3d' red='253' green='184' blue='19'/>
        </models>
    </group>

    <group>
        <transform>
            <translate x='3.5' y='0' z='3.5' />
            <scale x='0.32' y='0.32' z='0.32'/>
        </transform>
        <models>
            <model file='sphere.3d' red='140' green='140' blue='148'/>
        </models>
    </group>

    <!-- venus -->
