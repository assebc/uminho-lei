<world> 
    <window width="512" height="512" />
    <camera> 
	    <position x="10" y="20" z="8" />
	    <lookAt x="0" y="0" z="0" />
	    <up x="0" y="1" z="0" /> 
        <projection fov="60" near="1" far="1000" />
    </camera>
    <group> 
		<transform>
			<rotate time="3" x="0" y="1" z="0" />
		</transform>
		<group>
			<transform>
				<translate time = "10" align="true"> <!-- O campo align diz se o objecto deve ser orientado na curva -->
					<point x = "0" y = "0" z = "4" />
					<point x = "4" y = "0" z = "0" />
					<point x = "0" y = "0" z = "-4" />
					<point x = "-4" y = "10" z = "0" />
				</translate>
				<rotate angle="-90" x="1" y="0" z="0" />
				<scale x="0.5" y="0.5" z="0.5" />
			</transform>
			<models> 
				<model file="bezier_10.3d" /> <!-- generator patch teapot.patch 10 bezier_10.3d -->
			</models>
		</group>
 	</group>
</world>
